{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": ["domain", "name"]
        },
        "description": {
            "type": "string"
        },
        "functions": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "properties": {
                        "project": {
                            "type": "string"
                        },
                        "package": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "path": {
                                    "type": "string"
                                }
                            },
                            "required": ["name", "path"]
                        },
                        "script": {
                            "type": "string"
                        },
                        "function": {
                            "type": "string"
                        },
                        "inputs": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "format": {
                                        "type": "string"
                                    },
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "$schema": {
                                                "type": "string"
                                            },
                                            "type": {
                                                "type": "string"
                                            },
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "type": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "required": ["$schema", "type"]
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "type", "format", "schema", "description"]
                            }
                        },
                        "outputs": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "format": {
                                        "type": "string"
                                    },
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "$schema": {
                                                "type": "string"
                                            },
                                            "type": {
                                                "type": "string"
                                            }
                                        },
                                        "required": ["$schema", "type"]
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "type", "format", "schema", "description"]
                            }
                        }
                    },
                    "required": ["project", "package", "script", "function", "inputs", "outputs"]
                }
            }
        },
        "build": {
            "type": "object",
            "properties": {
                "requirements": {
                    "type": "string"
                }
            },
            "required": ["requirements"]
        }
    },
    "required": ["id", "description", "functions", "build"]
}